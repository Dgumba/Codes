#include <iostream>
using namespace std;
int main()
{
    setlocale(0, "rus");
    int a[6], b, c;
    for (int i = 0; i < 6; i++) {
        cout << i << " Введите кол-во денег за месяц: ";
        cin >> a[i];
    }
    b = 0;
    for (int i = 0; i < 6; i++) {
        b += a[i];
    }
    cout << "Сумма денег за 6 месецев: " << b;
} 
