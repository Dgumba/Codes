#include <iostream>
using namespace std;
int main()
{
    setlocale(0, "rus");
    int a[3][3], sum1, sum2, sum3, sum4;
    sum4 = 0;
    sum1 = 0;
    sum2 = 0;
    sum3 = 0;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            cout << "Введите " << i + 1 << "." << j + 1 << "-е число: ";
            cin >> a[i][j];
        }
    }
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            cout << a[i][j] << " ";
            sum1 += a[i][j];
            sum3 += a[i][j];
            sum4 == 1;
        }
        cout << " | " << sum1;
        cout << "\n";
        sum1 = 0;
    }
    for (int i = 0; i < sum4; i++) {
        cout << "---\n";
    }
    for (int i = 0; i < 3; i++) {
        sum2 = 0;
        for (int j = 0; j < 3; j++) {
            sum2 += a[j][i];
            sum3 += a[j][i];
        }
        cout << sum2 << " ";
    }
    cout << " | " << sum3;
    
    
} 
