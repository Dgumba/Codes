#include<LiquidCrystal.h>
LiquidCrystal lcd(2,3,4,5,6,7);
int x=1;
int y;
int speed =500;
int direction=1;
int L;
int R;
void setup()
{
  lcd.begin(16, 2);
  pinMode(13, INPUT);
  pinMode(12, INPUT);
}
void loop(){
  lcd.clear();
  lcd.setCursor(0,digitalRead(13)); 
  lcd.print("|");
  lcd.setCursor(15,digitalRead(12)); 
  lcd.print("|");
  lcd.setCursor(x,y);  
  lcd.print("o");
  if(y==digitalRead(12) && x==14){
    direction=-1;
    y=random(0,1+1);
    speed-=10;
    }  
 if(y==digitalRead(13) && x==1){
    direction=1;
    y=random(0,1+1);
    speed-=10;
  } 
    if(x<0){
      x=1;
      y=0;
      R+=1;
      speed=300;
      direction=1;
      }
    if(x>15){
      x=14;
      y=0;
      L+=1;
      speed=300;
      direction=-1;
      }
  x=x+direction;
  delay(speed);
  }
