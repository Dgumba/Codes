cout << - вывод даных
cin >> - вводит даные
cout << i++; - сначало выводит i, после увеличивается
cout << ++i; - сначало увеличивается, после выводит i
Циклы:
for (i = 0; i <= 10 ; i++){

}
while (...){
	- работает пока выполняется действие ...
}
do {
	- сначало делает первый цикл после запускает while
} while(...);

Библиотеки:
#include <iostream> - для использования(существования) std (вроде)
setlocale(0, "RUSS.UTF-8");

Переводы:
and == &&
or == ||

Другое:
cout << pow(a, c) << endl; - степень
using namespace std; - для того чтобы не писать std 
rewind(stdin); 		|
err = scanf_s("%d", &s);| - для выключения ошибок

Срезы:
\b - удаление последнего выведенного символа
\n - перейти на начало новой строки 
\t - перейти к следующей позиции табуляции 
\\ - вывести обратную черту (\)
\" - вывести двойную кавычку (")
\' - вывести одинарную кавычку (')
